{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build: g++ (with minisat)",
      "type": "cppbuild",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++17",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lminisat"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Builds the active C++ file with the MiniSat library."
    }
  ]
}